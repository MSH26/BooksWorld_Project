
@{
    ViewBag.Title = "BookList";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<fieldset>
    <legend>
        <b>BOOK | SEARCH</b>
    </legend>
    Filter By
    <select>
        <option>Name</option>
        <option>Author</option>
        <option>Publisher</option>
        <option>Category</option>
    </select>
    <input />
    <input type="submit" value="Search" />
    @Html.ActionLink("Add New", "AddNewBook", "Admin")
</fieldset>
<br />
<table width="100%" cellspacing="0" border="1" cellpadding="5">
    <tr>
        <th align="left">Name</th>
        <th align="left">Author</th>
        <th align="left">Publisher</th>
        <th align="left">Category</th>
        <th colspan="3">Action</th>
    </tr>
    @{
        foreach (var item in ViewBag.BookList)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Author.Name</td>
                <td>@item.Publication.Name</td>
                <td>@item.BookCategory.Name</td>
                <td>@Html.ActionLink("Details", "BookDetails", "Admin", new { item.Id }, null)</td>
                <td>@Html.ActionLink("Edit", "EditBookDetails", "Admin", new { item.Id }, null)</td>
                <td width="45"><a href="delete.html">Delete</a></td>
            </tr>
        }

    }
    
    
</table>

