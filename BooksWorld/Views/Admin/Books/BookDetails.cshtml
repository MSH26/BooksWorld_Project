
@{
    ViewBag.Title = "BookDetails";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<fieldset>
    <legend><b>BOOK | DETAIL</b></legend>
    <br />
    <table>
        <tr>
            <td>
                <table cellpadding="0" cellspacing="0">
                    <tr>
                        <td>Name</td>
                        <td>:</td>
                        <td>@ViewBag.Book.Name</td>
                    </tr>
                    <tr><td colspan="4"><hr /></td></tr>
                    <tr>
                        <td>Author</td>
                        <td>:</td>
                        <td>@ViewBag.Book.Author.Name</td>
                    </tr>
                    <tr><td colspan="4"><hr /></td></tr>
                    <tr>
                        <td>Publisher</td>
                        <td>:</td>
                        <td>@ViewBag.Book.Publication.Name</td>
                    </tr>
                    <tr><td colspan="4"><hr /></td></tr>
                    <tr>
                        <td>Category</td>
                        <td>:</td>
                        <td>@ViewBag.Book.BookCategory.Name</td>
                    </tr>
                    <tr><td colspan="4"><hr /></td></tr>

                    <tr>
                        <td>AvailableQuantity</td>
                        <td>:</td>
                        <td>@ViewBag.Book.AvailableQuantity</td>
                    </tr>
                    <tr><td colspan="4"><hr /></td></tr>
                    <tr>
                        <td>Regular Price</td>
                        <td>:</td>
                        <td>BDT @ViewBag.Book.Price</td>
                    </tr>
                    <tr><td colspan="4"><hr /></td></tr>
                    <tr>
                        <td>% OFF on Sell</td>
                        <td>:</td>
                        <td>10</td>
                    </tr>

                    <tr><td colspan="4"><hr /></td></tr>
                    <tr>
                        <td>Description</td>
                        <td>:</td>
                        <td>@ViewBag.Book.Description</td>
                    </tr>

                </table>
            </td>
            <td><img src="../../../Resource/Picture/BookPictures/picture_book.jpg" height="200" width="150" /></td>
        </tr>
    </table>

    <hr />
    @Html.ActionLink("Back", "BookList", "Admin")
    @Html.ActionLink("Edit", "EditBookDetails", "Admin", new { @ViewBag.Book.Id }, null)
    
    <br /><br />

</fieldset>

