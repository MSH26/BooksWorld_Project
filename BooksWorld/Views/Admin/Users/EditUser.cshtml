@model BooksWorld.Models.AdminUserList.AdminUserListEditUserModel 
@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


@Html.Raw(@TempData["msg"])
<br />
<fieldset>
    <legend><b>USER | EDIT</b></legend>
    <br />
    <form method="post">
        <table width="100%" cellpadding="0" cellspacing="0" border="0">
            <tr>
                <td>
                    <table width="100%" cellpadding="0" cellspacing="0" border="0">
                        <tr>
                            <td width="100"></td>
                            <td width="10"></td>
                            <td width="230"></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>User Name</td>
                            <td>:</td>
                            <td>@Html.DisplayFor(model => model.UserName)</td>
                            <td></td>
                        </tr>
                        <tr><td colspan="4"><hr /></td></tr>
                        <tr>
                            <td>Name</td>
                            <td>:</td>
                            <td>@Html.DisplayFor(model => model.Name)</td>
                            <td></td>
                        </tr>
                        <tr><td colspan="4"><hr /></td></tr>
                        <tr>
                            <td>Email</td>
                            <td>:</td>
                            <td>@Html.DisplayFor(model => model.Email)</td>
                            <td></td>
                        </tr>
                        <tr><td colspan="4"><hr /></td></tr>
                        <tr>
                            <td>Gender</td>
                            <td>:</td>
                            <td>@Html.DisplayFor(model => model.Gender)</td>
                            <td></td>
                        </tr>
                        <tr><td colspan="4"><hr /></td></tr>
                        <tr>
                            <td valign="top">Date of Birth</td>
                            <td valign="top">:</td>
                            <td>@Html.DisplayFor(model => model.DateOfBirth.Date)</td>
                            <td></td>
                        </tr>
                        <tr><td colspan="4"><hr /></td></tr>
                        <tr>
                            <td valign="top">Mobile No</td>
                            <td valign="top">:</td>
                            <td>@Html.EditorFor(model => model.MobileNo)</td>
                            <td></td>
                        </tr>
                        <tr><td colspan="4"><hr /></td></tr>
                       
                        <tr>
                            <td>Role</td>
                            <td>:</td>
                            <td>
                                <select name="role">
                                    @if ( Model.Role.Equals("Admin"))
                                    {
                                        <option value="Admin" selected>Admin</option>
                                        <option value="DeliveryMan">DeliveryMan</option>
                                        <option value="User">User</option>
                                    }

                                    else if (Model.Role.Equals("DeliveryMan"))
                                    {
                                        <option value="Admin">Admin</option>
                                        <option value="DeliveryMan" selected>DeliveryMan</option>
                                        <option value="User">User</option>
                                    }
                                    else if (Model.Role.Equals("User"))
                                    {
                                        <option value="Admin">Admin</option>
                                        <option value="DeliveryMan">DeliveryMan</option>
                                        <option value="User" selected>User</option>
                                    }
                                </select>
                            </td>
                            <td></td>
                        </tr>
                        <tr><td colspan="4"><hr /></td></tr>
                        <tr>
                            <td>Status</td>
                            <td>:</td>
                            <td>
                                <select name="status">
                                    @if (Model.Status == true)
                                    {
                                        <option value="true" selected>Active</option>
                                        <option value="false" >Blocked</option>
                                    }

                                    else if (Model.Status == false)
                                    {
                                        <option value="true" >Active</option>
                                        <option value="false" selected>Blocked</option>
                                    }
                                </select>
                            </td>
                            <td></td>
                        </tr>
                    </table>
                    </td>
                        <td><img src="Something.png" height="200px" width="200px"> </td>
                    </tr>
            </table>

        <hr />
        <input type="submit" value="Save">
        @Html.ActionLink("Back To UserList", "UsersList", "Admin")
    </form>
</fieldset>