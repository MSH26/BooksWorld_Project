
@{
    ViewBag.Title = "Balance";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<fieldset>
    <legend>
        <b>BALANCE</b>
    </legend>
    Our total account balance : <a> @ViewBag.Total </a>
    <br />We earn <a> @ViewBag.Daily </a> Today
    <br />We earn <a>  </a> this month
    <br />We earn <a>  </a> this year
</fieldset>
<br />
<fieldset>
    <legend>
        <b>REVENUE|| HISTORY</b>
    </legend>
    <fieldset>
        <legend>
            <b>PENDING | ORDER</b>
        </legend>
        Filter By Date :
        <input type="date" name="BalanceDate">
        <input type="submit" value="Search" name="BalanceDateSearch" />
        <br /><br /><br />
    </fieldset>  
    <table width="100%" cellspacing="0" border="1" cellpadding="5">
        <tr>
            <th align="left">Invoice NO</th>
            <th align="left">Buyer Name</th>
            <th align="left">Grant Price</th>
            <th align="left">Status</th>
            <th align="left">Pin No</th>
            <th align="left">Payment</th>
            <th colspan="3">Shipment</th>
        </tr>
       @foreach (var item in ViewBag.Invoices)
       {
        <tr>
            <td>@item.Id</td>
            <td>@item.User.Name</td>
            <td>@item.GrandPrice</td>
            <td>
                @if (item.Status == true)
                {
                    @Html.Raw("Approved");

                }
                else
                {
                    @Html.Raw("Pending");
                }
            </td>
            <td>@item.PinNumber</td>
            <td>
                @Html.ActionLink("Payment", "Index", "Admin", new { item.Shipment.Id }, null)
            </td>

            <td>
                @Html.ActionLink("Shipment", "Index", "Admin", new { item.Shipment.Id }, null)
            </td>
        </tr>
       }
    </table>
</fieldset>
<br /><hr />


@Html.ActionLink("Go Gome", "Index", "Admin")
