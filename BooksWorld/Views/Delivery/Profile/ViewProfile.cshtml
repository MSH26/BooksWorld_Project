@model BooksWorld.Models.UserProfile.ViewProfileModel
@{
    Layout = "~/Views/Shared/DeliveryBoy_Layout.cshtml";
}
<fieldset>
    <legend><b>PROFILE</b></legend>
    <form>
        <br />
        <table cellpadding="0" cellspacing="0">
            <tr>
                <td width="100"></td>
                <td width="10"></td>
                <td width="230"></td>
                <td></td>
            </tr>
            <tr>
                <td>User Name</td>
                <td>:</td>
                <td>@Html.DisplayFor(model => model.UserName)</td>
            </tr>
            <tr><td colspan="3"><hr /></td></tr>
            <tr>
                <td>Name</td>
                <td>:</td>
                <td>@Html.DisplayFor(model => model.Name)</td>
                <td rowspan="7" align="center">
                    <img width="128" src="../../Resource/Picture/AllUserPictures/user.png" />
                    <br />
                    @Html.ActionLink("Change", "ProfilePicture", "Delivery")
                </td>
            </tr>
            <tr><td colspan="3"><hr /></td></tr>
            <tr>
                <td>Email</td>
                <td>:</td>
                <td>@Html.DisplayFor(model => model.Email)</td>
            </tr>
            <tr><td colspan="3"><hr /></td></tr>
            <tr>
                <td>Gender</td>
                <td>:</td>
                <td>@Html.DisplayFor(model => model.Gender)</td>
            </tr>
            <tr><td colspan="3"><hr /></td></tr>
            <tr>
                <td>Date of Birth</td>
                <td>:</td>
                <td>@Html.DisplayFor(model => model.Dob)</td>
            </tr>
            <tr><td colspan="3"><hr /></td></tr>
            <tr>
                <td>Role</td>
                <td>:</td>
                <td>@Html.DisplayFor(model => model.Role)</td>
            </tr>
            <tr><td colspan="3"><hr /></td></tr>
            <tr>
                <td>Status</td>
                <td>:</td>
                <td>@Html.DisplayFor(model => model.Status)</td>
            </tr>
            <tr><td colspan="3"><hr /></td></tr>
            <tr>
                <td>User Since</td>
                <td>:</td>
                <td>@Html.DisplayFor(model => model.RegistrationDate)</td>
            </tr>
        </table>
        <hr />
        @Html.ActionLink("Edit", "EditProfile", "Delivery")
        @Html.ActionLink("Dashboard", "LoggedinDashboard", "Delivery")
    </form>
</fieldset>