
@{
    Layout = "~/Views/Shared/User_Layout.cshtml";
}


<html>
     <body>
        <script>
                function myMap() {
                    var mapProp = {
                        center: new google.maps.LatLng(51.508742, -0.120850),
                        zoom: 5,
                    };
                    new google.maps.Map(document.getElementById("googleMap"), mapProp);
                }
        </script>

         <div>
             <img style="width:370px; margin:30px auto; display:block" src="../../Resource/Picture/LayoutPictures/Home.PNG" />
             <form method="post">
                 <input placeholder="Search by Book, Author, Publication, Category" style="width:550px; height: 25px; margin:59px auto 0 auto; display:block; border: 1px solid #3492F7; " type="text" />
                 <input type="submit" value="Search" align="center" style="width:80px; height: 25px; margin:5px auto 0 auto; display:block; border: 1px solid #3492F7; "/>
             </form>
         </div>
         <br/>

         <h1>Shop Over 175 Million New and Used Books</h1>

         @foreach (var category in ViewBag.List)
         {
             <table border="1" width="100%" height="200">
                 <tr>
                     <td>
                         <table border="1" width="100%" height="180">
                             <tr>
                                 @foreach (var book in category.Books)
                                 {
                                     <td width="100%" height="180">
                                         <img src="@book.Picture" height="100" width="100" /><br />
                                         @Html.ActionLink((string)book.Name, "BookDetail", "User", new { book.Id }, null)<br />
                                         @Html.ActionLink("Add To Cart", "AddToCart", "User", new { book.Id }, null)
                                     </td>
                                 }
                             </tr>
                         </table>
                     </td>
                     <td>
                         @category.Name <br />
                         @category.Description <br />
                         @Html.ActionLink("Browse now", "CategoryBook", "User", new { category.Id }, null)
                     </td>
                 </tr>
             </table>
         }