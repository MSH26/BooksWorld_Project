@Html.Raw(@ViewBag.Msg)
<br/>
<fieldset>
    <legend><b>BOOK | DETAIL</b></legend>
    <br />
    <table>
        <tr>
            <td>
                <table cellpadding="0" cellspacing="0">
                    <tr>
                        <td>Name</td>
                        <td>:</td>
                        <td>@ViewBag.Book.Name</td>
                    </tr>
                    <tr><td colspan="4"><hr /></td></tr>
                    <tr>
                        <td>Author</td>
                        <td>:</td>
                        <td>@ViewBag.Book.Author.Name</td>
                    </tr>
                    <tr><td colspan="4"><hr /></td></tr>
                    <tr>
                        <td>Publisher</td>
                        <td>:</td>
                        <td>@ViewBag.Book.Publication.Name</td>
                    </tr>
                    <tr><td colspan="4"><hr /></td></tr>
                    <tr>
                        <td>Category</td>
                        <td>:</td>
                        <td>@ViewBag.Book.BookCategory.Name</td>
                    </tr>
                    <tr><td colspan="4"><hr /></td></tr>
                    <tr>
                        <td>Regular Price</td>
                        <td>:</td>
                        <td>BDT @ViewBag.Book.Price</td>
                    </tr>
                    <tr><td colspan="4"><hr /></td></tr>
                    <tr>
                        <td>% OFF on Sell</td>
                        <td>:</td>
                        <td>10</td>
                    </tr>
                    <tr><td colspan="4"><hr /></td></tr>
                    <tr>
                        <td>Rent Price</td>
                        <td>:</td>
                        <td>$5</td>
                    </tr>
                    <tr><td colspan="4"><hr /></td></tr>
                    <tr>
                        <td>% OFF on Rent</td>
                        <td>:</td>
                        <td>5</td>
                    </tr>
                    <tr><td colspan="4"><hr /></td></tr>
                    <tr>
                        <td>Description</td>
                        <td>:</td>
                        <td>@ViewBag.Book.Description</td>
                    </tr>
                    <tr><td colspan="4"><hr /></td></tr>
                </table>
            </td>
            <td><img src="../../../resources/picture/picture_book.jpg" height="200" width="150" /></td>
        </tr>
    </table>
    <hr />
    @Html.ActionLink("Add To Cart", "BookAddToCart", "User", new { ViewBag.Book.Id }, null) |
    @Html.ActionLink("Back", "Index", "User") | 
    @Html.ActionLink("Go To This Category", "CategoryBook", "User", new { ViewBag.Book.BookCategory.Id }, null)
    <br /><br />
</fieldset>