@model BooksWorld.Models.UserProfile.ViewProfileModel

@{
    Layout = "~/Views/Shared/User_Layout.cshtml";
}
<fieldset>
    <legend><b>PROFILE</b></legend>
    <form>
        <br />
        <table>
            <tr>
                <td>
                    <table cellpadding="0" cellspacing="0">
                        <tr>
                            <td>Name</td>
                            <td>:</td>
                            <td>@Html.DisplayFor(model => model.Name)</td>
                        </tr>
                        <tr><td colspan="3"><hr /></td></tr>
                        <tr>
                            <td>Email</td>
                            <td>:</td>
                            <td>@Html.DisplayFor(model => model.Email)</td>
                        </tr>
                        <tr><td colspan="3"><hr /></td></tr>
                        <tr>
                            <td>Gender</td>
                            <td>:</td>
                            <td>@Html.DisplayFor(model => model.Gender)</td>
                        </tr>
                        <tr><td colspan="3"><hr /></td></tr>
                        <tr>
                            <td>Date of Birth</td>
                            <td>:</td>
                            <td>@Html.DisplayFor(model => model.Dob.Date)</td>
                        </tr>
                        <tr><td colspan="3"><hr /></td></tr>
                        <tr>
                            <td>Role</td>
                            <td>:</td>
                            <td>@Html.DisplayFor(model => model.Role)</td>
                        </tr>
                        <tr><td colspan="3"><hr /></td></tr>
                        <tr>
                            <td>Status</td>
                            <td>:</td>
                            <td>
                                @if(Model.Status == true)
                                { 
                                    <a>Active</a>
                                }
                                else
                                {
                                    <a>Blocked</a>
                                }
                            </td>
                        </tr>
                        <tr><td colspan="3"><hr /></td></tr>
                        <tr>
                            <td>User since</td>
                            <td>:</td>
                            <td>@Html.DisplayFor(model => model.RegistrationDate.Date)</td>
                        </tr>
                    </table>
                </td>
                <td rowspan="7" align="center">
                    <img width="128" src="@Html.DisplayFor(model => model.Picture)" />
                    <br />
                    @Html.ActionLink("Change", "ProfilePicture", "User")
                </td>
            </tr>
        </table>
        <hr />
        @Html.ActionLink("Edit", "EditProfile", "User")
        @Html.ActionLink("Dashboard", "LoggedinDashboard", "User")
    </form>
</fieldset>