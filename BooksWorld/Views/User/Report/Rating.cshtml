
@{
    ViewBag.Title = "Rating";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}

<script>
function show(e){
	if(e.value == "1"){
		filter.innerHTML="Books Of Rating 1";
	}
	else if(e.value == "2"){
		filter.innerHTML="Books Of Rating 2";
	}
	else if(e.value == "3"){
		filter.innerHTML="Books Of Rating 3";
	}
	else if(e.value == "4"){
		filter.innerHTML="Books Of Rating 4";
	}
	else if(e.value == "5"){
		filter.innerHTML="Books Of Rating 5";
	}
	else{
		filter.innerHTML="Books Of Rating Any";
	}
}
</script>

